<div class="column">
	<div class="row devise">
		<div class="col-md-3">
			<ul class="sidebar-list">
				<li class="sidebar-item"><%= link_to "My Stylist Profile", stylists_path, class: "sidebar-link" %></li>
				<li class="sidebar-item"><%= link_to "Client Appointments", stylists_path, class: "sidebar-link active" %></li>
				<li class="sidebar-item"><%= link_to "My Appointments", my_appointments_path, class: "sidebar-link" %></li>
			</ul>
		</div>
		<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Client Appointments
			</div>
			<div class="panel-body">
				<% @stylists.each do |stylist| %>
					
					<% stylist.appointments.each do |appointment| %>
						<div class="row">
							<div class="col-md-2">
								<%= appointment.start_date.strftime('%v') %>
							</div>	
							<div class="col-md-4">
								<%= link_to stylist_path(appointment.stylist) do %>
									<%= image_tag appointment.stylist.photos[0].image.url(:thumb) if appointment.stylist.photos.length > 0 %>
								<% end %>
							</div>	
							<div class="col-md-4">
								<%= link_to user_path(appointment.user) do %>
									<%= image_tag avatar_url(appointment.user), class: "img-circle avatar-medium" %>
									<span><%= appointment.user.fullname %> - <%= appointment.user.phone_number %>
								<% end %>	
							</div>	
							<div class="col-md-2 right">
								<h4>appointment.total to go here %></h4>
							</div>	
						</div>
						<hr>
					<% end %>

				<% end %>

			</div>
		</div>
	</div>
</div>