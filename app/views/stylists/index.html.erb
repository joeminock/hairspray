<div class="column">
	<div class="row devise">
		<div class="col-md-3">
			<ul class="sidebar-list">
				<li class="sidebar-item"><%= link_to "Your Stylist Listings", stylists_path, class: "sidebar-link active" %></li>
				<li class="sidebar-item"><%= link_to "Your Appointments", stylists_path, class: "sidebar-link" %></li>
			</ul>
		</div>
		<div class="col-md-9">
			<div class="panel panel-default">
				<div class="panel-heading">
					Listings
				</div>
				<div class="panel-body">
					
					<% @stylists.each do |stylist| %>
						<div class="row">
								
							<div class="col-md-7">
								<h4><%= stylist.stylist_name %></h4>
							</div>		
							<div class="col-md-3 right">
								<%= link_to "Update", edit_stylist_path(stylist), class: "btn btn-primary" %>
							</div>		
						</div>
					<% end %>

				</div>
			</div>
		</div>
	</div>
</div>