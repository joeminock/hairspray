<div class="column">
	<div class="row devise">
		<div class="col-md-3">
			<ul class="sidebar-list">
				<li class="sidebar-item"><%= link_to "My Stylist Profile", stylists_path, class: "sidebar-link active" %></li>
				<li class="sidebar-item"><%= link_to "Client Appointments", client_appointments_path, class: "sidebar-link" %></li>
				<li class="sidebar-item"><%= link_to "My Appointments", my_appointments_path, class: "sidebar-link" %></li>
			</ul>
		</div>
		<div class="col-md-9">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4>My Stylist Profiles</h4>
				</div>
					
				<% @stylists.each do |stylist| %>
				<div class="panel-body">
					<div class="row">
						<div class="col-md-2">
							<h4><%= image_tag stylist.photos[0].image.url(:thumb) if stylist.photos.length > 0 %></h4>
						</div>
						<div class="col-md-7">
							<h4><%= stylist.stylist_name %></h4>
						</div>		
						<div class="col-md-3 right">
							<%= link_to "Update", edit_stylist_path(stylist), class: "btn btn-primary" %>
						</div>		
					</div>
				</div>
				<% end %>

				
			</div>
		</div>
	</div>
</div>