<div class="column">
	<div class="row devise">
		<div class="col-md-3">
			<ul class="sidebar-list">
				<li class="sidebar-item"><%= link_to "My Stylist Profile", stylists_path, class: "sidebar-link" %></li>
				<li class="sidebar-item"><%= link_to "Client Appointments", stylists_path, class: "sidebar-link" %></li>
				<li class="sidebar-item"><%= link_to "My Appointments", my_appointments_path, class: "sidebar-link active" %></li>
			</ul>
		</div>
		<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				My Appointments
			</div>
			<div class="panel-body">
				
				<% @my_appointments.each do |my_appointment| %>
					<div class="row">
						<div class="col-md-2">
							<%= my_appointment.start_date.strftime('%v') %>
						</div>	
						<div class="col-md-6">
							<%= link_to stylist_path(my_appointment.stylist) do %>
								<%= my_appointment.stylist.stylist_name %>
								<%= image_tag my_appointment.stylist.photos[0].image.url(:thumb) if my_appointment.stylist.photos.length > 0 %>
							<% end %>
						</div>	
						<div class="col-md-2">
							<%= link_to user_path(my_appointment.stylist.user) do %>
								<%= image_tag avatar_url(my_appointment.stylist.user), class: "img-circle avatar-medium" %>
							<% end %>	
						</div>	
						<div class="col-md-2 right">
							<h4>my appointment total to go here</h4>
						</div>	
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>