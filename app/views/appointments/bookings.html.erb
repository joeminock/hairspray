<div class="column">
	<div class="row devise">
		<div class="col-md-3">
			<ul class="sidebar-list">
				<li class="sidebar-item"><%= link_to "Your Stylist Listing", stylists_path, class: "sidebar-link active" %></li>
				<li class="sidebar-item"><%= link_to "Your Client Appointments", stylists_path, class: "sidebar-link active" %></li>
				<li class="sidebar-item"><%= link_to "Your Booked Appointments", bookings_path, class: "sidebar-link" %></li>
			</ul>
		</div>
		<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Stylist Appointments
			</div>
			<div class="panel-body">
				
				<% @bookings.each do |booking| %>
					<div class="row">
						<div class="col-md-2">
							<%= booking.start_date.strftime('%v') %>
						</div>	
						<div class="col-md-6">
							<%= link_to stylist_path(booking.stylist) do %>
								<%= booking.stylist.stylist_name %>
								<%= image_tag booking.stylist.photos[0].image.url(:thumb) if booking.stylist.photos.length > 0 %>
							<% end %>
						</div>	
						<div class="col-md-2">
							<%= link_to user_path(booking.stylist.user) do %>
								<%= image_tag avatar_url(booking.stylist.user), class: "img-circle avatar-medium" %>
							<% end %>	
						</div>	
						<div class="col-md-2 right">
							<h4>booking total to go here</h4>
						</div>	
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>