<%= form_for([@stylist, @stylist.appointments.new]) do |f| %>
	<%= f.text_field :start_date %>
	<%= f.text_field :end_date %>
	<br>
	<%= f.submit "Book Now", class: "btn btn-primary" %>
<% end %>

<script>
	$(function() {

		$('#appointment_start_date').datepicker({
			dateFormat: 'dd-mm-yy'
		});
		$('#appointment_end_date').datepicker({
			dateFormat: 'dd-mm-yy'
		});

	});
</script>
</script>